#!usr/bin/perl
 
#data extraction
my %hash_input;
while(defined($line = <>)) {
	chomp($line);
	my ($comp_name,$board_member) = (split /\t/, $line)[0,1];#chose first two useful para
	#my $board_member = (split /\t/, $line)[1];
	$hash_input{$comp_name}{$board_member}='1';#two keys hash, and with a value '1', which also means it's weight is 1;
	#print STDERR "the company's name is $comp_name, and the board member's name is $board_member\n";
}
 
#@any_array = $hash_input;
#print "@any_array\n"
#wirte to files
my $filename = 'report.txt';
open(my $fh, '>', $filename) or die "Could not open file '$filename' $!";
#print $fh "My first report generated by perl\n";
foreach $f (keys %hash_input) {
    foreach $g ( keys %{$hash_input{$f}} ) {
        print $fh "$f => $g; value($hash_input{$f}{$g})\n";
     }
}
close $fh;
print "done\n";
 
 
 
